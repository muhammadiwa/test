# Config file for environment variables
# Rename this file to .env and fill in your actual API keys

# MEXC API Credentials
MEXC_API_KEY=your_api_key_here
MEXC_API_SECRET=your_api_secret_here

# Telegram Bot Settings
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Bot Settings
DEFAULT_USDT_AMOUNT=100  # Default amount in USDT for trades
BUY_FREQUENCY_MS=10  # Default buy frequency in milliseconds (1-100)
MAX_RETRY_ATTEMPTS=5  # Maximum number of retry attempts for failed orders
PROFIT_TARGET_PERCENTAGE=20  # Default take profit percentage
STOP_LOSS_PERCENTAGE=10  # Default stop loss percentage
TRAILING_STOP_PERCENTAGE=5  # Default trailing stop percentage after profit target
TIME_BASED_SELL_MINUTES=30  # Default time to auto-sell in minutes

# VPN Settings
USE_VPN=true  # Set to true to enable VPN connection to Singapore
# You can optionally provide your own VPN configuration by placing .ovpn file in ./vpn directory
